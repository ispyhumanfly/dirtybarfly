[%- USE HTML -%]
<!doctype html><html>
    <head>
    <title>[% HTML.escape(title) %] - Insurgent-Auth</title>
    <link rel="stylesheet" href="/style.css" type="text/css" media="screen, projection" title="Normal" />
    </head>
    <body>
    <div id="status">
    <ul>
[% IF c.user_exists() %]
    <li><b>Logged in as [% HTML.escape(c.user.get_object.email) %]</b></li>
    <li><a href="[% HTML.escape(c.uri_for('account')) %]">Account</a></li>
    <li><a href="[% HTML.escape(c.uri_for('logout')) %]">Logout</a></li>
[% ELSE %]
    <li><b>Not logged in.</b></li>
    <li><a href="[% HTML.escape(c.uri_for('login')) %]/">Login</a></li>
    <li><a href="[% HTML.escape(c.uri_for('register')) %]">Register</a></li>
[% END %]
    <li><a href="[% HTML.escape(c.uri_for('password-reset')) %]">Password Reset</a></li>
    </ul>
    </div>
    [% content %]
    </body>
</html>
