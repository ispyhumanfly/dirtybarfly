<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

    <head>
	
	<title>dirtybarfly :: Dirty boozer talk.</title>
	
	<!-- Stylesheet -->
	
	<link rel="stylesheet" type="text/css" href="/default.css">
    
	<!-- Dojo 1.6.1 JavaScript Framework -->

	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/dojo/1.6.1/dojo/dojo.xd.js"></script>
        
        <script type="text/javascript">//<![CDATA[
            
	    dojo.require("dojo.parser");
	    
            dojo.require("dijit.layout.BorderContainer");
            dojo.require("dijit.layout.ContentPane");
	    dojo.require("dojox.layout.ExpandoPane");
	    dojo.require("dijit.layout.AccordionContainer");
	    dojo.require('dijit.layout.TabContainer');
	    dojo.require("dijit.TitlePane");
	    dojo.require("dijit.Dialog");
	    dojo.require("dijit.Tooltip");
	    dojo.require("dijit.Editor");
	    dojo.require("dijit.form.Form");
	    dojo.require("dijit.form.TextBox");
	    dojo.require("dijit.form.Button");
	    dojo.require("dijit.form.ToggleButton");
	    dojo.require("dijit.form.FilteringSelect");
	    dojo.require("dijit.form.DateTextBox");
	    dojo.require("dijit.form.TimeTextBox");
	    dojo.require("dijit.form.CheckBox");
	    dojo.require("dijit.form.Textarea");
	    dojo.require("dijit.form.Slider");
	    dojo.require("dojox.fx");
	    
	    dojo.addOnLoad(_initLoader);
	   
	    function _initLoader() {

	      var content = dojo.byId("content");
	      var loader  = dojo.byId("loader");
	   
	      // Parse the content manually
	      dojo.parser.parse(content);
	   
	      // Fade the loader div out
	      dojo.fadeOut({
		node: loader, duration: 250, onEnd: function() {
		  loader.style.display = "none";
		}
	      }).play(250);
	      
	      dojo.fadeIn({
		node: content, duration: 1250, onEnd: function() {
		  //loader.style.display = "none";
		}
	      }).play(1250);
	    }
        
        //]]></script>
	
    </head>
    
    <body class='claro'>
	
	<!-- Page Loader -->
	    
	<div id="loader"><!--<div id="loaderInner" style="font-family: 'Ubuntu', arial, serif;">Loading...</div>--></div>
	
	<!-- Page Container -->
	
	% if ( $self->session('person_id') ) {

	<div id="tooltip_location" style="float: left; margin-top: 25px;">

	    <div dojoType="dijit.form.Form" encType="multipart/form-data" action="/location" method="POST">

		<div dojoType="dijit.form.TextBox" style="width: 250px;" name="location" placeHolder="<%= $self->session('city') %>, <%= $self->session('region') %>"></div>
	
		<button dojoType="dijit.form.Button" type="submit">ok</button>
	    </div>
    
	</div>
	
	<div dojoType="dijit.Tooltip" connectId="tooltip_location" position="below">
    
	    <p>Where would you like to go?</p>
    
	</div>

	% }
	
	<link href='http://fonts.googleapis.com/css?family=Prosto+One' rel='stylesheet' type='text/css'>

	<div id="title_font" style="font-family: 'Prosto One', cursive; font-size: 50px; padding: 10px 0 10px 0; color: black; float: right;">dirty.bar.fly</div><br />

	<div dojoType="dijit.layout.BorderContainer" style="height:78%; width: 100%; border: 0.01em solid; margin: 0px; padding: 0.00em; background-color: #2b2d2c;">
	    	    
	    <%= content %>
	
	</div>
    
	    <!-- Page Footer -->
	    
<!--	    <div dojoType="dijit.layout.ContentPane" region="bottom" style="background-color: #2b2d2c; border-color: #2b2d2c;">
-->		
		<% if ( $self->session('person_id') ) { %>
		
		%= include 'controls'

		<div style="vertical-align: middle; float: left; color: #ffffff; font-size: small; font-weight: bold;">
		    		    
		    <p>
			<img style="width: 25px; height: 25px;" src="<%= $self->{'person'}->avatar %>"></img>
			
			Hi <%= $self->{'person'}->name %>, you can 
			<span style="cursor: pointer;" onclick="dijit.byId('dialog_profile').show();">check your profile, </span>
			<span style="cursor: pointer;" onclick="dijit.byId('dialog_submit').show();">, submit something </span>
			<span style="cursor: pointer;" onclick="window.location='/signout';">or sign out!
			
		    </p>
		
		</div>
		
		<% } %>
		
		<div style="vertical-align: middle; float: right; color: #ffffff; font-size: medium; font-family: 'Ubuntu', arial, serif;">
		    
		    <p>
			a Thoughtpivot joint
		    
		        <a id="follow-blogger" href="http://purethoughtpivot.com/" title="Thoughtpivot on Blogger"><span>Blogger</span></a> 
			<a id="follow-twitter" href="http://twitter.com/#!/thoughtpivot" title="Thoughtpivot on Twitter"><span>Twitter</span></a></p>

		    </p>
		
		</div>
	    
		<!--<div id="player" style="display: none;">
		    <iframe width="1024" height="60" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=http%3A%2F%2Fapi.soundcloud.com%2Fplaylists%2F2910194&amp;color=66bbee&amp;auto_play=true&amp;show_artwork=false"></iframe>
		</div>-->
		
	    <!--</div>-->
	    
    </body>
</html>
