<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

    <head>
	
	<title>Moonfuzz</title>
	
	<!-- Stylesheet -->
	
	<link rel="stylesheet" type="text/css" href="/moonfuzz.css">

	<!-- Dojo 1.5 JavaScript Framework -->
	
	<style type="text/css">
	    @import url("http://ajax.googleapis.com/ajax/libs/dojo/1.5/dojox/layout/resources/ExpandoPane.css");
	</style>
	
	<link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/dojo/1.5/dijit/themes/tundra/tundra.css">
	<link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/dojo/1.5/dojox/widget/Portlet/Portlet.css">

	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/dojo/1.5/dojo/dojo.xd.js" djConfig="parseOnLoad:true"></script>
        
        <script type="text/javascript">//<![CDATA[
            
            dojo.require("dijit.layout.BorderContainer");
            dojo.require("dijit.layout.ContentPane");
	    dojo.require("dojox.layout.ExpandoPane");
	    dojo.require("dijit.layout.AccordionContainer");
	    dojo.require("dijit.TitlePane");
	    dojo.require("dijit.Dialog");
	    dojo.require("dijit.form.Form");
	    dojo.require("dijit.form.TextBox");
	    dojo.require("dijit.form.Button");
            
        //]]></script>
	
	<!-- Google Map -->
	
	<%= include 'map' %>
	
    </head>
    
    <body class='tundra'>

	<!-- Page Container -->
	
	<div dojoType="dijit.layout.BorderContainer" style="height:100%; width: 100%; border: 0.01em solid; margin: 0px; padding: 0.00em;">
	    
	    <!-- Page Header -->
	    
	    <div dojoType="dijit.layout.ContentPane" region="top" style="background-color: #2b2d2c; border-color: #2b2d2c;">
		
		<div style="float: left; vertical-align: middle; margin: 5px;">
			
		    <div style="font-size: 30px; margin: 5px;">
		    
			<img src="/logo.png" style="width: auto; height: 100px;"/>
		
		    </div>
		
		    <% if ( $self->session('person_id') ) { %>
		    
		    <%= include 'menu' %>
		    
		    <% } %>
			
		</div>
		
	    </div>
	    
	    <!-- Page Content -->
	    
	    <%= content %>
    	    
	    <!-- Page Footer -->
	    
	    <div dojoType="dijit.layout.ContentPane" region="bottom" style="background-color: #2b2d2c; border-color: #2b2d2c;">
    
		<div style="vertical-align: middle; float: left; color: #ffffff; font-size: large;">
		    
		    <p>Moonfuzz &copy; 2011 Insurgent Software, LLC.</p>
		
		</div>
		
		<div style="vertical-align: middle; float: right; color: #ffffff; font-size: large;">
		    
		    <p>
			About Us <img src="/Moonfuzz/point.png">
			Privacy <img src="/Moonfuzz/point.png">
			Terms of Use <img src="/Moonfuzz/point.png">
			Help
		    </p>
		
		</div>
		
	    </div>
	
	</div>
    
    </body>
</html>
