<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

    <head>
	
	<title>Moonfuzz :: Connecting the medical marijuana community.</title>
	
	<!-- Stylesheet -->
	
	<link rel="stylesheet" type="text/css" href="/moonfuzz.css">

	<!-- Dojo 1.5 JavaScript Framework -->

	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/dojo/1.5/dojo/dojo.xd.js"></script>
        
        <script type="text/javascript">//<![CDATA[
            
	    dojo.require("dojo.parser");
	    
            dojo.require("dijit.layout.BorderContainer");
            dojo.require("dijit.layout.ContentPane");
	    dojo.require("dojox.layout.ExpandoPane");
	    dojo.require("dijit.layout.AccordionContainer");
	    dojo.require('dijit.layout.TabContainer');
	    dojo.require("dijit.TitlePane");
	    dojo.require("dijit.Dialog");
	    dojo.require("dijit.Tooltip");
	    dojo.require("dijit.Editor");
	    dojo.require("dijit.form.Form");
	    dojo.require("dijit.form.TextBox");
	    dojo.require("dijit.form.Button");
	    dojo.require("dijit.form.ToggleButton");
	    dojo.require("dijit.form.FilteringSelect");
	    dojo.require("dijit.form.DateTextBox");
	    dojo.require("dijit.form.TimeTextBox");
	    dojo.require("dijit.form.CheckBox");
	    dojo.require("dijit.form.Textarea");
	    dojo.require("dojox.fx");
	    
	    dojo.addOnLoad(_initLoader);
	   
	    function _initLoader() {

	      var content = dojo.byId("content");
	      var loader  = dojo.byId("loader");
	   
	      // Parse the content manually
	      dojo.parser.parse(content);
	   
	      // Fade the loader div out
	      dojo.fadeOut({
		node: loader, duration: 250, onEnd: function() {
		  loader.style.display = "none";
		}
	      }).play(250);
	    }
        
        //]]></script>
	
    </head>
    
    <body class='tundra'>
	
	<!-- Page Loader -->
	    
	<div id="loader"><div id="loaderInner" style="font-family: 'Ubuntu', arial, serif;">Loading...</div></div>
	
	<!-- Page Container -->
	
	<div dojoType="dijit.layout.BorderContainer" style="height:100%; width: 100%; border: 0.01em solid; margin: 0px; padding: 0.00em; background-color: #2b2d2c;">
	    
	    <!-- Page Header -->
	    
	    <% if ( $self->session('person_id') ) { %>
	    
	    <div dojoType="dijit.layout.ContentPane" id="header_content" region="top">
		
		<img src='/logo.png' style="width: 100%; height: 100%; position: absolute; top: 0; left: 0;" />
		
		<%= include 'controls' %>
	    
	    </div>
	    
	    <% } %>
	    
	    <!-- Page Content -->
	    
	    <%= content %>
	    
	    <!-- Page Footer -->
	    
	    <div dojoType="dijit.layout.ContentPane" region="bottom" style="background-color: #2b2d2c; border-color: #2b2d2c;">
		
		<% if ( $self->session('person_id') ) { %>
		
		<div style="vertical-align: middle; float: left; color: #ffffff; font-size: medium; font: bold;">
		    
		    <p>
			<span style="cursor: pointer;" onclick="dijit.byId('dialog_profile').show();"><%= $self->{'person'}->name %> <img src="/point.png"></span>
			<span style="cursor: pointer;" onclick="dijit.byId('dialog_submit').show();">Submit something! <img src="/point.png"></span>
			<span style="cursor: pointer;" onclick="window.location='/signout';">Sign out
			
		    </p>
		
		</div>
		
		<% } %>
		
		<div style="vertical-align: middle; float: right; color: #ffffff; font-size: medium; font-family: 'Ubuntu', arial, serif;">
		    
		    <p>
			Moonfuzz &copy; 2011 Insurgent Software, LLC.
		    
		        <a id="follow-blogger" href="http://moonfuzz420.blogspot.com/" title="Moonfuzz on Blogger"><span>Blogger</span></a> 
			<a id="follow-twitter" href="http://twitter.com/#!/moonfuzz420" title="Moonfuzz on Twitter"><span>Twitter</span></a></p>

		    </p>
		
		</div>
		
	    </div>
	
	</div>
    
    </body>
</html>
