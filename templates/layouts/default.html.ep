<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

    <head>
	
	<title>Socialmap</title>
	
	<!-- Socialmap Stylesheet -->
	
	<link rel="stylesheet" type="text/css" href="/default.css">

	<!-- Dojo 1.5 JavaScript Framework -->
	
	<link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/dojo/1.5/dijit/themes/claro/claro.css">
	<link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/dojo/1.5/dojox/widget/Portlet/Portlet.css">

	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/dojo/1.5/dojo/dojo.xd.js" djConfig="parseOnLoad:true"></script>
        
        <script type="text/javascript">//<![CDATA[
            
            dojo.require("dijit.layout.BorderContainer");
            dojo.require("dijit.layout.ContentPane");
	    dojo.require("dijit.form.Form");
	    dojo.require("dijit.form.TextBox");
	    dojo.require("dijit.form.Button");
	    dojo.require("dijit.layout.AccordionContainer");
	    dojo.require("dijit.TitlePane");
	    dojo.require("dijit.Dialog");
            
        //]]></script>
	
	<%= include 'map' %>
	
    </head>
    
    <body class='claro'>

	<!-- Page Container -->
	
	<div dojoType="dijit.layout.BorderContainer" style="height:100%; width: 100%;">
	    
	    <!-- Page Header -->
	    
	    <div dojoType="dijit.layout.ContentPane" region="top">
		
		<div style="float: left; vertical-align: middle; margin: 5px;">
			
		    <div style="font-size: 30px; margin: 5px;">
		    
			<img src="/logo.png" style="width: auto; height: 50px;"/>
		
		    </div>
		
		    <% if ( $self->session('person_id') ) { %>
		    
		    <a href='/dashboard'><%= $self->session('name') %> |</a>
		    
		    <a href='/people'>People |</a>
		    
		    <a href='/places'>Places |</a>
		    
		    <a href='#'>Stories |</a>
		    
		    <a href='#'>Ads |</a>
		    
		    <a href='#'>Discussion |</a>
		    
		    <a href='#'>Graph</a>
		    
		    <% } %>
		    
		</div>
		
		<% if ( $self->session('person_id') ) { %>
		
		<div style="float: right; vertical-align: middle; margin-top: 45px;" id="tooltip_location">
		    	
		    <div dojoType="dijit.form.Form" encType="multipart/form-data" action="/location" method="POST">
		    
			<div dojoType="dijit.form.TextBox" width="50" name="location" placeHolder="<%= $self->session('city') %>, <%= $self->session('region') %>"></div>

			<div dojoType="dijit.form.Button" type="submit">Location</div>
		    
		    </div>
        
		</div>
		
		<div dojoType="dijit.Tooltip" connectId="tooltip_location" position="below">

		    <p>Tell me where you want to go.</p>
	    
		</div>
		
		<% } %>
		
	    </div>
	    
	    <!-- Page Content -->
	    
	    <%= content %>
    	    
	    <!-- Page Footer -->
	    
	    <div dojoType="dijit.layout.ContentPane" region="bottom">

		<div style="vertical-align: middle;">
		    
		    <div style="float: left;">
			
			<%= include 'options' %>
			
		    </div>
		
		    <div style="float: right;">
			
			<a href="http://www.insurgentsoftware.com">Socialmap &copy; 2010 Insurgent Software, LLC.</a>
		    
		    </div>
		    
		</div>
		
	    </div>
    
	</div>
	
    </body>
</html>
