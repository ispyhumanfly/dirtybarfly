<script type="text/javascript">//<![CDATA[

    dojo.require("dijit.Tooltip");
    dojo.require("dijit.Dialog");
    dojo.require("dijit.form.Button");
    dojo.require("dijit.Menu");
    dojo.require("dijit.form.ToggleButton");
    
//]]></script>


<div dojoType="dijit.layout.TabContainer" style="width: 100%; height: 100%;" tabPosition="top">
    
    <div dojoType="dijit.layout.ContentPane" title="Category 1">
	
	<% foreach my $person ( @{ $self->{'people'} } ) { %>
	
	<div id="result_item">
	
	    <div id="person_<%= $person->person_id %>" style="cursor: pointer;" onclick="javascript:dijit.byId('person_dialog_<%= $person->person_id %>').show()">
		
                <p>
                    <img src="<%= $person->avatar %>" width="50" height="50" />
                    
                    <span style="margin-left: 5px; font-size: large;"><%= $person->name %></span>
                    <span style="margin-left: 5px; font-size: smaller; font-style: italic; color: grey;">22 minutes ago w/ 12 comments & 138 trackers</span>
                
                </p>
                
	    </div>
	    
	    <div dojoType="dijit.Tooltip" connectId="person_<%= $person->person_id %>" position="below">
	
		<p><%= $person->blurb %></p>
	    
	    </div>
	    
	</div>
	
	<div id="person_dialog_<%= $person->person_id %>" dojoType="dijit.Dialog" title="<%= $person->name %>" style="width: 800px; height: 600px;">
	
	    <div style="width: inherit; height: 550px;">
	    
		<div dojoType="dijit.layout.TabContainer" tabStrip="true" style="width: 100%; height: 100%;" tabPosition="right-h">
		
		    <div dojoType="dijit.layout.ContentPane" title="Person" selected="true">
			
			<img src="<%= $person->avatar %>" width="50" height="50" />
			
			Location: <%= $person->city %>, <%= $person->region %> <br />
			Blurb: <%= $person->blurb %> <br />
			
			<div dojoType="dijit.form.ComboButton" style="margin: 10px;">
			
			    <span>
				Tracking
			    </span>
			
			    <div dojoType="dijit.Menu">
				
				<div dojoType="dijit.MenuItem" onClick="dojo.xhrPost({ url: 'tracking/person/<%= $person->person_id %>', postData: 'start=1' })">
				    Start
				</div>
				
				<div dojoType="dijit.MenuItem" onClick="dojo.xhrPost({ url: 'tracking/person/<%= $person->person_id %>', postData: 'stop=1' })">
				    Stop
				</div>
				
			    </div>
			</div>
			
		    </div>
		    
		    <div dojoType="dijit.layout.ContentPane" title="Trackers">
			
			<% for ( 1 .. 4 ) { %>
			    
			    <p><img src="/avatar.png" width="25" height="25" />Someone who is tracking this person.<p>
			    
			<% } %>
			
		    </div>
		
		</div>
		
	    </div>
	    
	</div>
	
	<% } %>
	
    </div>

    <div dojoType="dijit.layout.ContentPane" title="Category 2"></div>
    <div dojoType="dijit.layout.ContentPane" title="Category 3"></div>
    <div dojoType="dijit.layout.ContentPane" title="Category 4"></div>
    <div dojoType="dijit.layout.ContentPane" title="Category 5"></div>
    <div dojoType="dijit.layout.ContentPane" title="Category 6"></div>
    <div dojoType="dijit.layout.ContentPane" title="Category 7"></div>
    
</div>
